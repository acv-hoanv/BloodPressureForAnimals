<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="@color/colorPrimary"

    android:layout_height="@dimen/dimen_35dp">

    <TextView
        android:maxLines="2"
        android:textStyle="bold"
        android:textSize="@dimen/dimen_14dp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimen_35dp"
        android:layout_marginRight="@dimen/dimen_35dp"
        android:text="Header Title" />


    <Button
        android:textSize="@dimen/dimen_13dp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:id="@+id/header_btn_left"
        android:layout_width="@dimen/dimen_35dp"
        android:layout_height="@dimen/dimen_35dp"
        android:text="Left" />

    <ImageView
        android:id="@+id/header_btn_right"
        android:layout_width="@dimen/dimen_35dp"
        android:layout_height="@dimen/dimen_35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:padding="@dimen/dimen_6dp"
        android:textSize="@dimen/dimen_13dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_alignParentBottom="true"

        android:layout_alignParentStart="true"
        android:background="#ec8e84" />
</RelativeLayout>
